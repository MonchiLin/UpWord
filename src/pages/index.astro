---
import Layout from "../layouts/Layout.astro";
import HomeWorkspace from "@/components/HomeWorkspace";

import { apiFetch } from "../lib/api";

let publishedDays: string[] = [];
try {
	const data = await apiFetch<{ days: string[] }>('/api/days');
	publishedDays = data.days || [];
} catch (e) {
	console.error("Failed to fetch days:", e);
}

const initialDate = new Date().toISOString().split("T")[0];
---

<Layout
	title="Daily Vocabulary Reader"
	mainClass="p-0 max-w-none overflow-hidden"
>
	<HomeWorkspace
		client:load
		publishedDays={publishedDays}
		initialDate={initialDate}
	/>
</Layout>
