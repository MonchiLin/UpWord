{
  "extends": "astro/tsconfigs/strict",
  "include": [
    ".astro/types.d.ts",
    "**/*",
    "server/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "storybook-static",
    ".wrangler"
  ],
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@server/*": [
        "./server/src/*"
      ],
      "~/*": [
        "./public/*"
      ]
    }
  },
}